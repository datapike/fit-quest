<div class="container">
<h1>All Tasks</h1>
<hr/>
<div class="center">
<%= link_to "Enter New Tasks", new_task_path, class: "center btn btn-primary btn-white-text" %>
</div>
<br>
<% @tasks.each do |task| %>
    
    <div class="row">
        
       
        <div class="col-md-6">
            <h4>Task Name: <%= task.task_name %></h4>
        </div>
        <div class="col-md-3">
            <h4>Task Points: <%= task.task_points %></h4>
        </div>
        <div class="col-md-3">
            <%= link_to "Edit Task", edit_task_path(task), class: "center btn btn-warning" %>
        </div>
        <br>
        <br><hr />
    </div>
    
<% end %>
</div>
